<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.GameController" styleClass="game-root">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="12.0">
            <padding>
                <Insets top="20" right="30" bottom="10" left="30" />
            </padding>
            <Button text="Back to Dashboard" onAction="#handleReturnToDashboard" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="18.0">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40" />
            </padding>

            <Label fx:id="roomTitleLabel"
                   text="Escape Room: Math Gate"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;" />

            <!-- Removed inline -fx-text-fill so CSS can style it -->
            <Label fx:id="timerLabel" text="Timer: 00:00"
                   style="-fx-font-size: 16px;" />

            <Label fx:id="puzzlePromptLabel" wrapText="true" maxWidth="560"
                   style="-fx-font-size: 16px;" />

            <VBox spacing="10.0" alignment="CENTER">
                <TextField fx:id="answerField" promptText="Enter your answer" maxWidth="240" />

                <HBox spacing="12.0" alignment="CENTER">
                    <Button fx:id="submitButton" text="Unlock" onAction="#handleSubmitAnswer" />
                    <Button fx:id="hintButton" text="Need a Hint?" onAction="#handleRequestHint" />
                    <Button fx:id="extraHintButton" text="Extra hint"
                            onAction="#handleUseFreeClueToken"
                            visible="false" managed="false" />
                    <Button fx:id="freezeTimerButton" text="Freeze Timer"
                            onAction="#handleFreezeTimer"
                            visible="false" managed="false" />
                </HBox>

                <Button fx:id="nextButton" text="Next Room"
                        onAction="#handleNextRoom"
                        visible="false"
                        managed="false"
                        maxWidth="160"
                        style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            </VBox>

            <!-- Removed inline -fx-text-fill so CSS can style them -->
            <Label fx:id="feedbackLabel" style="-fx-font-size: 16px;" wrapText="true" maxWidth="480" />

            <Label fx:id="hintLabel" wrapText="true" maxWidth="480" />

            <Label fx:id="progressSummaryLabel" style="-fx-font-size: 14px;" wrapText="true" maxWidth="480" />

            <VBox fx:id="certificateBox" alignment="CENTER" spacing="8.0"
                  visible="false" managed="false"
                  style="-fx-padding: 24; -fx-background-color: #f1faee; -fx-border-color: #1d3557; -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12;">

                <Label fx:id="certificateTitleLabel" text="Puzzle Palace"
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1d3557;" />
                <Label fx:id="certificateMessageLabel" wrapText="true" textAlignment="CENTER" maxWidth="480"
                       style="-fx-font-size: 16px; -fx-text-fill: #264653;" />
                <Label fx:id="certificateDifficultyLabel" style="-fx-font-size: 16px; -fx-text-fill: #1d3557;" />
                <Label fx:id="certificateHintsLabel" style="-fx-font-size: 16px; -fx-text-fill: #1d3557;" />
                <Label fx:id="certificateScoreLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2a9d8f;" />
                <Label fx:id="certificateFooterLabel" wrapText="true" textAlignment="CENTER" maxWidth="480"
                       style="-fx-font-size: 14px; -fx-text-fill: #1d3557;" />
            </VBox>
        </VBox>
    </center>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

</BorderPane>
